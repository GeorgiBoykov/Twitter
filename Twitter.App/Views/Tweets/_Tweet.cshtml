@model Twitter.App.Models.ViewModels.TweetViewModel

<div class="panel panel-default">
    <div class="panel-body">
        <span class="text-muted" id="tweet-author">@Model.Author</span>
        <span class="text-muted">@Model.DatePosted</span>
        <p class="text-muted tweet-text">@Model.Text</p>
    </div>
    <ul class="tweet-options">
        <li><a href="#">Reply <span class="badge">@Model.RepliesCount</span></a></li>
        <li><a href="#">Retweet <span class="badge">@Model.RetweetsCount</span></a></li>
        <li>
            @Ajax.ActionLink("Favourite", "Favourite", "Tweets",
            new { tweetId = @Model.Id },
            new AjaxOptions() { InsertionMode = InsertionMode.Replace, UpdateTargetId = "Favourites" + @Model.Id })
            <span class="badge" id="@String.Format("Favourites{0}", @Model.Id)">@Model.UsersFavouriteCount</span>
        </li>
    </ul>

</div>